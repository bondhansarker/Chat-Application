<%= form_with(model: room, local: true) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.text_field :name, class: 'form-control', placeholder: "Room name" %>
  </div>

  <div class="actions">
    <%= form.submit "Add room",class: "form-control btn btn-outline-primary"  %>
  </div>
<% end %>
